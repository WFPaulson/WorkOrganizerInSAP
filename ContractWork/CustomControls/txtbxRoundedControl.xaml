<UserControl x:Class="ContractWork.CustomControls.txtbxRoundedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContractWork.CustomControls"
             xmlns:conv="clr-namespace:ContractWork.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="txtbxRounded" >

    <UserControl.Resources>
        <conv:ComplementaryColorsConverter x:Key="convcolors"/>
       
        <Style TargetType="TextBox" BasedOn="{StaticResource txtBoxRounded}">
            <Setter Property="Background"
                    Value="{Binding txtbxBackground, ElementName=txtbxRounded}" />
            <Setter Property="Foreground"
                    Value="{Binding txtbxForeground, ElementName=txtbxRounded}" />
            <Setter Property="BorderBrush"
                    Value="{Binding txtbxBorderBrush, ElementName=txtbxRounded}" />

            <Setter Property="Border.CornerRadius"  
                    Value="{Binding txtbxCornerRadius, ElementName=txtbxRounded}"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background"
                            Value="{Binding txtbxBackground, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />
                    <Setter Property="Foreground"
                            Value="{Binding txtbxForeground, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />
                    <Setter Property="BorderBrush"
                            Value="{Binding txtbxBorderBrush, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />

                    <Setter Property="Cursor" Value="IBeam" />
                    
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background"
                        Value="{Binding txtbxBackground, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />
                    <Setter Property="Foreground"
                        Value="{Binding txtbxForeground, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />
                    <Setter Property="BorderBrush"
                        Value="{Binding txtbxBorderBrush, ElementName=txtbxRounded, Converter={StaticResource convcolors}}" />

                    <Setter Property="Cursor" Value="IBeam" />

                </Trigger>
                
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <TextBox x:Name="txtbox" 
             Margin="{Binding txtbxMargin, ElementName=txtbxRounded}"
             BorderThickness="{Binding txtbxBorderThickness, ElementName=txtbxRounded}"
             Height="{Binding txtbxHeight, ElementName=txtbxRounded}"
             Width="{Binding txtbxWidth, ElementName=txtbxRounded}"
             FontSize="{Binding txtbxFontSize, ElementName=txtbxRounded}"
             FontWeight="{Binding txtbxFontWeight, ElementName=txtbxRounded}"
             Padding="{Binding txtbxPadding, ElementName=txtbxRounded}"
             HorizontalContentAlignment="{Binding txtbxHorizContentAlign, ElementName=txtbxRounded}"
             VerticalContentAlignment="{Binding txtbxVertContentAlign, ElementName=txtbxRounded}"
             HorizontalAlignment="{Binding txtbxHorizAlign, ElementName=txtbxRounded}"
             VerticalAlignment="{Binding txtbxVerticAlign, ElementName=txtbxRounded}"
             Text="{Binding txtbxText, ElementName=txtbxRounded}"
             
             >
    </TextBox>
    
</UserControl>
