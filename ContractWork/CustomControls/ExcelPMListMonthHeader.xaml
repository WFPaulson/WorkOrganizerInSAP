<UserControl x:Class="ContractWork.CustomControls.ExcelPMListMonthHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContractWork.CustomControls"
             xmlns:converters="clr-namespace:ContractWork.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="464.722" d:DesignWidth="153.591"
             x:Name="PMListMonthHeader"
             >
    <UserControl.Resources>
        <converters:DarkenColorConverter x:Key="Darken"/>
    </UserControl.Resources>
    
    <StackPanel Height="120"
            Margin="-5,-5,0,0">
        <Label Content="{Binding mnthDate, ElementName=PMListMonthHeader}" 
           Background="{Binding cellColor, ElementName=PMListMonthHeader}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0"  BorderBrush="{Binding borderColor, ElementName=PMListMonthHeader}"
                BorderThickness="1" Background="{Binding cellColor, ElementName=PMListMonthHeader}">
                <ItemsControl ItemsSource="{Binding Source='DUE'}"
                          FontSize="7"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                   HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <Border Grid.Column="1" Grid.Row="0" BorderBrush="{Binding borderColor, ElementName=PMListMonthHeader}"
                BorderThickness="1" Background="WhiteSmoke">
                <ItemsControl ItemsSource="{Binding Source='DONE'}"
                          FontSize="7" Margin="0,2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                   HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <Border Grid.Column="0" Grid.Row="1"
                    BorderBrush="Black" BorderThickness="1"
                    Background="{Binding cellColor, ElementName=PMListMonthHeader, Converter={StaticResource Darken}}">
                <TextBlock
                    Text="{Binding totalDue, ElementName=PMListMonthHeader}" HorizontalAlignment="Center"/>
            </Border>
            <Border Grid.Column="1" Grid.Row="1"
                    BorderBrush="Black" BorderThickness="1"
                    Background="WhiteSmoke">
            <TextBlock 
                    Text="{Binding totalDone, ElementName=PMListMonthHeader}" HorizontalAlignment="Center"/>
            </Border>

        </Grid>
        
    </StackPanel>
</UserControl>
