<UserControl x:Class="ContractWork.CustomControls.btnRoundedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContractWork.CustomControls"
             xmlns:conv="clr-namespace:ContractWork.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="btnRoundedWithShadow">


    <UserControl.Resources>
        <conv:DarkenColorConverter x:Key="Darken" />
        <conv:CornerRadiusRatioConverter x:Key="CornerRadiusRatio" />
        <conv:CornerRadiusPartialConverter x:Key="RadiusPartial"/>



        <Style x:Key="RDButtonStyle" BasedOn="{StaticResource RoundBtnShadow}" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{Binding btnRDBackground, ElementName=btnRoundedWithShadow}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Border.CornerRadius" Value="{Binding btnRDCornerRadius, ElementName=btnRoundedWithShadow}"/>
            <Setter Property="Foreground" Value="{Binding btnRDForeground, ElementName=btnRoundedWithShadow}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="{Binding btnMargin, ElementName=btnRoundedWithShadow}"/>
            <Setter Property="Padding" Value="{Binding TextPadding, ElementName=btnRoundedWithShadow}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <Border 
                            x:Name="border"
                            Background="{TemplateBinding Background}" 
                            CornerRadius="{TemplateBinding Border.CornerRadius}"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            SnapsToDevicePixels="true">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border 
                                    x:Name="blackBorder"
                                    Grid.Column="0"    
                                    BorderThickness="0, 0, .5, .5" 
                                    BorderBrush="Black" 
                                    CornerRadius="5"
                                    Height="25"
                                    Width="20"
                                    Margin="5 0 0 0"
                                    Panel.ZIndex="1"
                                    >
                                    <!--CornerRadius="{Binding ElementName=button, Path=CornerRadius}"-->
                                    <!--<Border.Effect>
                                        <BlurEffect Radius="2" 
                                                            KernelType="Gaussian"/>
                                    </Border.Effect>-->
                                </Border>

                                <Border
                                    x:Name="whiteBorder"
                                    Grid.Column="0"  
                                    BorderThickness=".5, .5, 0, 0" 
                                    BorderBrush="White" 
                                    CornerRadius="5"
                                    Height="25"
                                    Width="20"
                                    Margin="5 0 0 0"
                                    Panel.ZIndex="1"
                                    >
                                    
                                </Border>
                                <!--CornerRadius="{Binding ElementName=button, Path=CornerRadius}"-->

                                <!-- Open File
                                    &#xE8E5;
                                    &#59621;-->

                                <Button 
                                    x:Name="btnIconOverlay"
                                    Background="{TemplateBinding Background}"
                                    IsHitTestVisible="False"
                                    Visibility="{Binding btnIconOverlayIsEnabled, ElementName=btnRoundedWithShadow}"
                                    BorderBrush="{x:Null}"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    FontWeight="ExtraBlack"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#59621;"
                                    d:Content="&#xE721;">
                                    <!--<Button.Style>

                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="5"/>
                                            <Setter Property="Height" Value="35"/>
                                            <Setter Property="BorderBrush" Value="Black"/>
                                            <Setter Property="BorderThickness" Value="0 0 3 3"/>
                                            <Setter Property="BorderBrush" Value="White"/>
                                            <Setter Property="BorderThickness" Value="3 3 0 0"/>

                                        </Style>
                                        

                                        
                                            
                                    </Button.Style>-->

                                </Button>
                               


                                <ContentPresenter 
                                    Grid.Column="1"
                                    x:Name="contentPresenter" 
                                    Focusable="False" 
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                    Margin="{TemplateBinding Padding}" 
                                    RecognizesAccessKey="True" 
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                               

                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!--<Trigger Property="IsEnabled" Value="False" SourceName="btnIconOverlay">
                                <Setter Property="Background" Value="Green" TargetName="btnIconOverlay"/>

                            </Trigger>-->


                            <!--<Trigger Property="IsEnabled" Value="false" SourceName="btnIconOverlay">
                                <Setter Property="Background" TargetName="btnIconOverlay" 
                                        Value="Green"/>
                                <Setter Property="BorderBrush" TargetName="btnIconOverlay" 
                                        Value="Black"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" 
                                        Value="Purple"/>
                            </Trigger>-->



                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" 
                                        Value="{Binding btnRDBackground, ElementName=btnRoundedWithShadow, 
                                                    Converter={StaticResource Darken}}"/>
                                <Setter Property="Background" TargetName="btnIconOverlay"
                                        Value="{Binding btnRDBackground, ElementName=btnRoundedWithShadow, 
                                                    Converter={StaticResource Darken}}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="Visibility" Value="Collapsed" SourceName="btnIconOverlay">
                                <!--<Setter Property="Visibility" Value="Collapsed" TargetName="btnIconOverlay"/>-->
                                <Setter Property="Grid.Column" Value="0" TargetName="contentPresenter"/>
                                <Setter Property="Grid.ColumnSpan" Value="2" TargetName="contentPresenter"/>
                                <Setter Property="Visibility" Value="Collapsed" TargetName="blackBorder"/>
                                <Setter Property="Visibility" Value="Collapsed" TargetName="whiteBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!--<Button HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="16" 
                Padding="16,8" 
                Content="Click Me ..." 
                Style="{StaticResource 3DButtonStyle}"/>-->


    <Button 
        Style="{StaticResource RDButtonStyle}" x:Name="btn" 
        Margin="{Binding btnRDMargin, ElementName=btnRoundedWithShadow}"
        Width="{Binding btnRDWidth, ElementName=btnRoundedWithShadow}"
        Height="{Binding btnRDHeight, ElementName=btnRoundedWithShadow}"
        HorizontalAlignment="{Binding btnRDHorizAlign, ElementName=btnRoundedWithShadow}"
        VerticalAlignment="{Binding btnRDVertAlign, ElementName=btnRoundedWithShadow}"
        Command="{Binding btnRDCommand, ElementName=btnRoundedWithShadow}"
        CommandParameter="{Binding btnRDCmdParameter, ElementName=btnRoundedWithShadow}"
        Click="OnBtnClick">

        <Button.Content>
            <TextBlock 
                Padding="{Binding TextPadding, ElementName=btnRoundedWithShadow}"
                FontSize="{Binding btnRDFontSize, ElementName=btnRoundedWithShadow}"
                TextWrapping="{Binding btnRDTextWrap, ElementName=btnRoundedWithShadow}"
                FontFamily="Segoe UI"
                FontWeight="Normal"
                TextAlignment="Center"
                Foreground="{Binding btnRDForeground, ElementName=btnRoundedWithShadow}"
                Text="{Binding btnRDContent, ElementName=btnRoundedWithShadow}">

            </TextBlock>
        </Button.Content>
    </Button>
</UserControl>


