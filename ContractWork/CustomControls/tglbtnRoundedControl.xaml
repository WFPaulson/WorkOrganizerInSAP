<UserControl x:Class="ContractWork.CustomControls.tglbtnRoundedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContractWork.CustomControls"
             xmlns:converters="clr-namespace:ContractWork.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="tglbtnRounded">
    <UserControl.Resources>
        <converters:DarkenColorConverter x:Key="Darken" />

        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" 
                                   StrokeDashArray="1 2" 
                                   Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" 
                                   SnapsToDevicePixels="true" 
                                   StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--<SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>-->

        <Style x:Key="RoundedTglBtnStyle" TargetType="{x:Type ToggleButton}" >
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{Binding tglbtnBackground, ElementName=tglbtnRounded}"/>
            <Setter Property="BorderBrush" Value="{Binding tglbtnBorderBrush, ElementName=tglbtnRounded}"/>
            <Setter Property="Foreground" Value="{Binding tglbtnForeground, ElementName=tglbtnRounded}"/>
            <Setter Property="Border.CornerRadius" Value="{Binding tglbtnCornerRadius, ElementName=tglbtnRounded}"/>
            <Setter Property="BorderThickness" Value="{Binding tglbtnBorderThickness, ElementName=tglbtnRounded}"/>
            <Setter Property="Width" Value="{Binding tglbtnWidth, ElementName=tglbtnRounded}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="b1" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{TemplateBinding Border.CornerRadius}"
                                SnapsToDevicePixels="true">
                            <Border x:Name="b2"
                                    Background="White"
                                    Width="{TemplateBinding Height}"
                                    CornerRadius="20"
                                    HorizontalAlignment="Left">

                                 <ContentPresenter x:Name="contentPresenter" 
                                              Content="{Binding TextContent, ElementName=tglbtnRounded, Mode=TwoWay}"
                                              Focusable="False" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              Margin="{TemplateBinding Padding}" 
                                              RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Button.IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="b1" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="b1"
                                        Value="{Binding tglbtnBackground, ElementName=tglbtnRounded, Converter={StaticResource Darken}}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <!--<Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="b1" Value="Gold"/>
                                <Setter Property="BorderBrush" TargetName="b1" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>-->
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="b1" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="b1" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>

                            <!-- the next 2 triggers change the toggle button text -->
                            <Trigger Property="IsChecked" Value="True">
                                <!--<Setter TargetName="contentPresenter" Property="Content" Value="Continue?"/>-->
                                <Setter TargetName="b2" Property="Background" Value="Yellow"/>
                                <Setter TargetName="b2" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="False">
                                <!--<Setter TargetName="contentPresenter"  Property="Content" Value="Pause?"/>-->
                                <Setter TargetName="b2" Property="Background" Value="Gold"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>





    </UserControl.Resources>

    <Grid>

        <ToggleButton Style="{DynamicResource RoundedTglBtnStyle}" 
                      Width="{Binding tglbtnWidth, ElementName=tglbtnRounded}"
                      Height="{Binding tglbtnHeight, ElementName=tglbtnRounded}"
                      Padding="{Binding TextPadding, ElementName=tglbtnRounded}"
                      Margin="{Binding tglbtnMargin, ElementName=tglbtnRounded}"
                      Command="{Binding tglbtnCommand, ElementName=tglbtnRounded}"
                      VerticalAlignment="Top"
                      IsChecked="{Binding tglbtnIsChecked, ElementName=tglbtnRounded}"
                      >
            <!--IsChecked="{Binding tglbtnIsChecked, ElementName=tglbtnRounded}"
Checked="ToggleButton_Checked"
Unchecked="ToggleButton_Unchecked"
Click="OnBtnClick"-->

            <ToggleButton.Content>
                <StackPanel>
                    <Image Name="image1"  Source="{Binding ImageSource, ElementName=tglbtnRounded}" Stretch="Fill" >
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=ImageSource, 
                                        RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="null">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Label
                        Margin="{Binding TextPadding, ElementName=tglbtnRounded}"
                        FontSize="{Binding TextFontSize, ElementName=tglbtnRounded}"
                        FontFamily="Segoe UI"
                        FontWeight="Normal"
                        Foreground="Black"
                        VerticalAlignment="{Binding TextVertAlign, ElementName=tglbtnRounded}"
                        Content="{Binding TextContent, ElementName=tglbtnRounded, Mode=TwoWay}"
                        >

                    </Label>

                    <!--<TextBlock 
                        Margin="{Binding TextPadding, ElementName=tglbtnRounded}"
                        FontSize="{Binding TextFontSize, ElementName=tglbtnRounded}"
                        TextWrapping="Wrap"
                        FontFamily="Segoe UI"
                        FontWeight="Normal"
                        TextAlignment="Center"
                        Foreground="{Binding btnForeground, ElementName=tglbtnRounded}"
                        VerticalAlignment="{Binding TextVertAlign, ElementName=tglbtnRounded}"
                        Text="{Binding TextContent, ElementName=tglbtnRounded, Mode=TwoWay}"
                        >

                    </TextBlock>-->
                </StackPanel>
            </ToggleButton.Content>
        </ToggleButton>
    </Grid>
</UserControl>