<Window x:Class="ContractWork.MVVM.FileSelection.FileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractWork.MVVM.FileSelection"
        xmlns:converters="clr-namespace:ContractWork.Converters"
        xmlns:customcontrols="clr-namespace:ContractWork.CustomControls" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="ContractAndAssetsWindow" 
        Height="400" Width="1600"
        MouseLeftButtonDown="DragMe"
        x:Name="FileSelect"
        >
    <!--d:DataContext="{d:DesignInstance Type=local:FileSelectionViewModel}"-->
    <Border CornerRadius="10"
        Background="#212529"
        BorderBrush="White"
        BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <!--<RowDefinition Height="180"/>-->
                
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width=".8*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="2"
                BorderBrush="White"
                BorderThickness="2"
                Width="350"
                Height="35"
                Margin="0,0,0,5"
                CornerRadius="5"
                Background="Black">
                <Label Content="Default File Locations"
                   VerticalAlignment="Center"
                   Padding="0,0,0,2"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="18"/>
            </Border>
            
            <StackPanel Orientation="Horizontal"
                        Grid.Column="3">
                <StackPanel
                    Visibility="{Binding Countdownvisible}"
                    Margin="0,5,0,0">
                    <Border BorderThickness="2"
                            BorderBrush="White"
                            CornerRadius="10"
                            >
                        <Label Content="Press Clock to Change file Locations"
                            Foreground="White"/>
                    </Border>
                    <customcontrols:btnRoundedGelControl
                        textContent="{Binding Timeoutinseconds}"
                        btngelWidth="{Binding ClockBtnWidth}"
                        Margin="30,0,0,0"
                        btngelCommand="{Binding PauseClockCommand}"
                        />
                </StackPanel>

                <StackPanel
                    VerticalAlignment="Center"
                    Visibility="{Binding Nextvisible}"
                    Margin="10,0,0,0">
                    <!--<Border BorderThickness="2"
                         BorderBrush="White"
                            CornerRadius="10">
                        --><!--<Label Content="Press Clock to Change file Locations"
                            Foreground="White"/>--><!--
                    </Border>-->
                    <customcontrols:btnRoundedGelControl
                        mainColor="Gray"
                        offsetColor="Gray"
                        d:Foreground="Tomato"
                        Foreground="Tomato"
                        btnForeground="Yellow"
                        textContent="Next"
                        btngelWidth="50"
                        Margin="30,0,0,0"
                        btngelCommand="{Binding NextCommand}"/>
                </StackPanel>





                <!--<Border BorderBrush="AntiqueWhite" 
                        BorderThickness="2"
                        Margin="175,15,0,15"
                        CornerRadius="10"
                        
                        >
                <Label Name="lblSecs"
                    d:Content="10 secs"
                    Content="{Binding Timeoutinseconds}"
                    Foreground="White"
                    FontSize="20"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Top"/>
                </Border>-->
            
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                Grid.Column="4">
                <customcontrols:WindowControls
                    TextContent="-"     
                    
                    btnWidth="20"
                    btnMargin="20,0,0,0"
                    btnBckgrnd="#F5B53F"
                    btnClick="btnMinimize_Click"
                />

                <customcontrols:WindowControls
                    TextContent="X"
                    btnWidth="20"
                    btnMargin="5,0,0,0"
                    btnBckgrnd="#F55551" 
                    btnClick="btnExit_Click"
                />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickContractsFileCommand}"
                    btnCmdParameter="PMText"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="CadetBlue"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Contracts File"
                />
                <customcontrols:TextBoxControls
                    x:Name="ContractsFile"
                    txtbxWidth="980"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    txtbxText="{Binding ContractFileName}"
                />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                 Grid.Row="2"
                 Grid.Column="1"
                 Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                     btnClickCommand="{Binding PickAssetsFileCommand}"
                     btnCmdParameter="PMText"
                     btnBrdrCornerRadius="11"
                     MaintCornerRadius="10"
                     MaintBackground="CadetBlue"
                     btnBrdrHeight="45"
                     btnBrdrWidth="75"
                     btnBrdrThickness="2"
                     btnContentText="Assets File"
                />
                <customcontrols:TextBoxControls
                     x:Name="AssetsFile"
                     txtbxBackground="{Binding PmTextBoxBackground}"
                     txtbxForeground="{Binding PmTextBoxForeground}"
                     txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                     txtbxWidth="980"
                     txtbxHeight="28"
                     txtbxMargin="5,0,0,0"
                     HorizontalAlignment="Left"
                     txtbxFontSize="15"
                     txtbxBorderThickness="2"
                     txtbxPadding="3,0,0,1"
                     txtbxText="{Binding AssetFileName}"
                />

            </StackPanel>

            <!--<StackPanel Orientation="Horizontal"
                 Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                     btnClickCommand="{Binding PickExtendedAssetsFileCommand}"
                     btnCmdParameter="PMText"
                     btnBrdrCornerRadius="11"
                     MaintCornerRadius="10"
                     MaintBackground="CadetBlue"
                     btnBrdrHeight="45"
                     btnBrdrWidth="75"
                     btnBrdrThickness="2"
                     btnContentText="Extended Assets"
                />
                <customcontrols:TextBoxControls
                     x:Name="ExtendedAssetsFile"
                     txtbxBackground="{Binding PmTextBoxBackground}"
                     txtbxForeground="{Binding PmTextBoxForeground}"
                     txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                     txtbxWidth="980"
                     txtbxHeight="28"
                     txtbxMargin="5,0,0,0"
                     HorizontalAlignment="Left"
                     txtbxFontSize="15"
                     txtbxBorderThickness="2"
                     txtbxPadding="3,0,0,1"
                     txtbxText="{Binding ExtendedAssetFileName}"
                />      

            </StackPanel>-->

            <StackPanel 
                Orientation="Horizontal"
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickAccessFileCommand}"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="IndianRed"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Access File"
                />
                <customcontrols:TextBoxControls
                    x:Name="PMTextbox"
                    txtbxBackground="{Binding PmTextBoxBackground}"
                    txtbxForeground="{Binding PmTextBoxForeground}"
                    txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                    txtbxWidth="1300"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    txtbxText="{Binding AccessFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />

            </StackPanel>

            <StackPanel 
                 Orientation="Horizontal"
                 Grid.Row="4"
                 Grid.Column="1"
                 Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                     btnClickCommand="{Binding PickInventoryFileCommand}"
                     btnBrdrCornerRadius="11"
                     MaintCornerRadius="10"
                     MaintBackground="IndianRed"
                     btnBrdrHeight="45"
                     btnBrdrWidth="75"
                     btnBrdrThickness="2"
                     btnContentText="Inventory File"
                />  
                <customcontrols:TextBoxControls
                     x:Name="InventoryFilenameTextBox"
                     txtbxBackground="{Binding PmTextBoxBackground}"
                     txtbxForeground="{Binding PmTextBoxForeground}"
                     txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                     txtbxWidth="1100"
                     txtbxHeight="28"
                     txtbxMargin="5,0,0,0"
                     HorizontalAlignment="Left"
                     txtbxFontSize="15"
                     txtbxBorderThickness="2"
                     txtbxPadding="3,0,0,1"
                     txtbxText="{Binding InventoryFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
            </StackPanel>
            <StackPanel 
                Orientation="Horizontal"
                Grid.Row="5"
                Grid.Column="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                >

                <customcontrols:SelectionControls
                     btnClick="btnExit_Click"
                     btnBrdrCornerRadius="11"
                     MaintCornerRadius="10"
                     MaintBackground="LightGray"
                     btnBrdrHeight="45"
                     btnBrdrWidth="75"
                     btnBrdrThickness="2"
                     btnContentText="Exit"
                />

            </StackPanel>

        </Grid>
    </Border>
</Window>
