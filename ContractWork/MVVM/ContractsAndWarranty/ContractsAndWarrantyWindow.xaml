                                            Visibility="{Binding Data.VisibleColumns.SalesRepVisibility, Source={StaticResource proxy}}"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding LocationAddress}" Width="Auto"
                                            Visibility="{Binding Data.VisibleColumns.LocationAddressVisibility, Source={StaticResource proxy}}"/>
                        <DataGridTextColumn Header="County" Binding="{Binding County}" Width="Auto"
                                            Visibility="{Binding Data.VisibleColumns.CountyVisibility, Source={StaticResource proxy}}"/>
