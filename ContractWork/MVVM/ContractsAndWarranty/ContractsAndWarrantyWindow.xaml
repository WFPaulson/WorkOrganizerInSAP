<Window x:Class="ContractWork.MVVM.ContractsAndWarranty.ContractsAndWarrantyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractWork.MVVM.ContractsAndWarranty"
        xmlns:converters="clr-namespace:ContractWork.Converters"
        xmlns:customcontrols="clr-namespace:ContractWork.CustomControls"
        xmlns:libraries="clr-namespace:Servicelibraries.Services;assembly=Servicelibraries"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:OleDb="clr-namespace:System.Data.OleDb;assembly=System.Data.OleDb" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        
        mc:Ignorable="d"
        AllowsTransparency="True"
        MinHeight="1000" MinWidth="1520"
        Height="1000" Width="1520"
        MaxHeight="1000" MaxWidth="1900"
        
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="DragMe"
        x:Name="ContractsAndWarranty"
        ContentRendered="ContractsAndWarranty_ContentRendered">
    <!--d:DataContext="{d:DesignInstance Type=viewmodels:ContractsAndWarrantyViewModel}"-->

    <Window.Resources>
        <converters:DarkenColorConverter x:Key="Darken" />
        <converters:MinusConverter x:Key="MinusTen" />
        <Color x:Key="Bluish2">#00ff00</Color>
        <libraries:BindingProxy x:Key="proxy" Data="{Binding}"/>

    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="ColorBackground"/>
        <!--#5C83B4-->
    </Window.Background>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!--This is the header-->
        <Border BorderThickness="0,0,0,2" BorderBrush="Black"
                    Grid.Row="0" Grid.ColumnSpan="3">
            <Grid Background= "{StaticResource BackgroundDarkPurple}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel 
                    Grid.Column="0"
                    Orientation="Horizontal">

                    <Border CornerRadius="10"
                        Background="Wheat"
                        Height="30"
                        Width="130"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <Button Content="Column Size Refresh"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="RefreshColumnSize_Click"/>
                    </Border>

                    <customcontrols:btnMaintenanceControl
                        btnClickCommand="{Binding InspectContractCommand}"
                        btnBrdrHeight="25"
                        btnBrdrWidth="120"
                        btnBrdrCornerRadius="10"
                        btnBrdrBrush="Silver"
                        btnBrdrThickness="1"
                        MaintCornerRadius="9"
                        MaintBackground="#2A2F36"
                        btnBrdrMargin="15,5"
                        btnForeground="White"
                        btnContentText="Inspect Contract"
                        btnVertAlign="Center"
                        btnHorizAlign="Left"
                    />
                </StackPanel>

                <Label Grid.Column="1"
                       Content="Contracts and Warranties"
                       Foreground="White" FontSize="18"
                       HorizontalContentAlignment="Center"
                       VerticalAlignment="Center"/>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <customcontrols:WindowControls
                        TextContent="-"
                        btnWidth="20"
                        btnMargin="1, 0, 1, 0"
                        btnBckgrnd="#F5B53F"
                        btnClick="btnMinimize_Click"
                        />
                        <customcontrols:WindowControls
                        TextContent="X"
                        btnWidth="20"
                        btnMargin="3, 0, 1, 0"
                        btnBckgrnd="#F55551"
                        btnClick="btnExit_Click"
                        />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Visible">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="208*"/>
                    <ColumnDefinition Width="1323*"/>
                    <ColumnDefinition Width="52*"/>
                    <ColumnDefinition Width="52*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="310"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="310"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--This is the Excel Open / view / search / status / etc -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5,0,0" Grid.ColumnSpan="4">

                    <customcontrols:WindowControls
                        TextContent="Max"
                        TextFontSize="10"
                        brdrCornerRadius="20"
                        btnWidth="25"
                        btnMargin="1, 0, 1, 0"
                        btnBckgrnd="Gray"
                        btnCommand="{Binding MaximizeExcelDatagridCommand}"
                        />
                    <TextBox Background="Wheat"
                             Height="30"
                             MinWidth="650"
                             MaxWidth="650"
                             Margin="5 0"
                             Padding="2 3 0 0"
                             HorizontalAlignment="Center"
                             Text="{Binding XLFileName}" 
                             />
                    <ComboBox Style="{DynamicResource ComboBoxStyle}" 
                              ItemsSource="{Binding ViewList}"
                              SelectedItem="{Binding XLSelectedView}"
                              IsEnabled="{Binding ViewXLArchivedIsEnabled}"
                              Text="{Binding XLTextOverlay}"
                              IsEditable="True"
                              IsReadOnly="True" 
                              HorizontalAlignment="Right"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"
                              Margin="20,0,5 0"
                              Width="140"
                              Height="30"
                              FontSize="11">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ViewXLArchivedCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBox.ToolTip>
                            <TextBlock Text="Choose the Table to Display" FontSize="14"/>
                        </ComboBox.ToolTip>
                    </ComboBox>

                    <Button Command="{Binding ClearXLFilterCommand}" 
                            HorizontalAlignment="Left"
                            Margin="20,0,0,0"
                            Content="Clear Filter" 
                            Width="120"
                            Height="30"
                            />
                    <ComboBox 
                        Style="{StaticResource ComboBoxStyle}"
                        ItemsSource="{Binding ExcelFilterBy}" 
                        Text="{Binding XLPickColumnTextOverlay}" 
                        SelectedItem="{Binding PickedColumn}"
                        IsEnabled="{Binding FilterByXLArchivedIsEnabled}"
                        IsEditable="True" 
                        IsReadOnly="True" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Margin="30,0,5,0"
                        Width="150"
                        Height="30"
                        >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding FilterXLWorksheetByCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>

                    <Button Command="{Binding XLArchiveEquipmentCommand}" Height="30"
                             Width="115"
                             VerticalContentAlignment="Center"
                             Margin="20,0,10,0"
                             Padding="0,0,0,0"
                             Content="Archive Equipment" 
                            />
                    <Label Foreground="White"
                           Content="Status:"
                           Margin="30 0 0 0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" 
                           />
                    <TextBox Height="30"
                             Width="90"
                             Margin="5 0"
                             Padding="2 3 0 0"
                             Text="{Binding DidXLFail}" 
                             />
                </StackPanel>
                <!--ExcelDatatable
                ItemsSource="{Binding EquipList}"-->
                <!--This is the Excel Spreadsheet 
                AutoGenerateColumns="False"
AutoGeneratingColumn="dtgrdXLSpreadsheet_AutoGeneratingColumn"-->
                <DataGrid Grid.Row="1" 
                          x:Name="dtgrdXLSpreadsheet"
                          
                          ItemsSource="{Binding ExcelDatatable}"
                          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                          
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="dtgrdXLSpreadsheet_AutoGeneratingColumn"
                          
                          RowHeight="20"
                          MinHeight="290"
                          Height="300"
                          MinWidth="1400"
                          Width="{Binding ElementName=ContractsAndWarranty, Path=ActualWidth, 
                                Converter={StaticResource MinusTen}, 
                                ConverterParameter={StaticResource Twenty}}"
                          MaxWidth="1880"
                          HorizontalAlignment="Left"
                          Margin="0,5,0,5" Grid.ColumnSpan="2"
                          >
