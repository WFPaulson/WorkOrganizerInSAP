                </DataGrid>

                <!--This is the Access Open / view / search / status / etc -->
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="4">

                    <customcontrols:WindowControls
                        TextContent="Max"
                        TextFontSize="10"
                        brdrCornerRadius="20"
                        btnWidth="25"
                        btnMargin="1, 0, 1, 0"
                        btnBckgrnd="Gray"
                        btnCommand="{Binding MaximizeExcelDatagridCommand}"
                        />
                    <TextBox Background="Wheat"
                             Height="30"
                             MinWidth="650"
                             MaxWidth="650"
                             Margin="5,0"
                             Padding="2 3 0 0"
                             HorizontalAlignment="Center"
                             Text="{Binding DBFileName}" 
                             />
                    <ComboBox Style="{StaticResource ComboBoxStyle}" 
                              ItemsSource="{Binding ViewList}"
                              SelectedItem="{Binding DBSelectedView}"
                              IsEnabled="{Binding ViewDBArchivedIsEnabled}" 
                              Text="Please clear"
                              IsEditable="True" 
                              IsReadOnly="True" 
                              HorizontalAlignment="Left"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"
                              Margin="20,0,5 0"
                              Width="140"
                              Height="30"
                              FontSize="11">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SetViewInAccessDataGridCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBox.ToolTip>
                            <TextBlock Text="Choose the Table to Display" FontSize="14"/>
                        </ComboBox.ToolTip>
                    </ComboBox>
                    <!--Text="Please clear" {Binding DBTextOverlay}-->
                    <Button Command="{Binding UpdateExcelArchivedFromAccessCommand}" Grid.Column="0"
                            Height="30"
                            Width="120"
                            Content="Update Excel Archived &#x0a;       From Access"
                            FontSize="10"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Margin="20,0,0,0" 
                            ToolTipService.ShowOnDisabled="True">
                        <Button.ToolTip>
                            <TextBlock Text="Load Both Access and Excel &#xA;with 'Viewing by All'"
                                       FontSize="14"/>
                        </Button.ToolTip>
                    </Button>

                    <Label Foreground="White"
                           Margin="23,0,5,0"
                           Content="Between:"
                           Height="25"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" 
                           />
                    <DatePicker IsEnabled="{Binding BetweenDatePickerEnabled}" 
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalContentAlignment="Center" 
                                />
                    <Label Foreground="White"
                           Content="And"
                           Margin="10,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" 
                           />
                    <DatePicker IsEnabled="{Binding AfterDatePickerEnabled}" 
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalContentAlignment="Center" 
                                />
                    <Label Foreground="White"
                           Content="Status:"
                           Margin="21,0,0,0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" 
                           />
                    <TextBox Height="30"
                             Width="90"
                             Margin="5,0"
                             Padding="2 3 0 0"
                             Text="{Binding DidDBFail}"
                             />
                </StackPanel>

                <!--This is the Access Spreadsheet -->
                <DataGrid Grid.Row="3"
                          x:Name="dtgrdAccessDataBase"
                          ItemsSource="{Binding AccessDatatable}"
                          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible"
                          AutoGeneratingColumn="dtgrdAccessDataBase_AutoGeneratingColumn"
                          AutoGenerateColumns="true"
                          RowHeight="20"
                          MinHeight="290"
                          Height="300"
                          MinWidth="1400"
                          Width="{Binding ElementName=ContractsAndWarranty, Path=ActualWidth, 
                                Converter={StaticResource MinusTen}, 
                                ConverterParameter={StaticResource Twenty}}"
                          MaxWidth="1880"
                          HorizontalAlignment="Left"
                          Margin="0,5,0,5"
                          Background="#D5DFE5" Grid.ColumnSpan="2">
                </DataGrid>

                <!--This is the Access manipulation / etc -->
                <Grid Grid.Row="4" Grid.ColumnSpan="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1085"/>
                        <ColumnDefinition Width="550"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ContentControl Style="{StaticResource PanelSunken}"
                                    Margin="0,5,0,0"
                                    Height="40"
                                    Width="387"
                                    HorizontalAlignment="Left"
                                    >
                        <Label Content="New Status"
                           Margin="0,0,0,0"
                           Foreground="White"
                           FontSize="18"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"/>
                    </ContentControl>

                    <Button Command="{Binding UpdateAcessServicePlanArchivedCommand}" 
                            Grid.Column="0"
                            Height="40"
                            Width="170"
                            Content="{Binding ChangeArchiveStatus}"
                            HorizontalAlignment="Left"
                            Margin="400,0,0,0"/>



                    <ContentControl Style="{StaticResource PanelSunken}"
                                    Margin="465,5,0,0"
                                    Height="40"
                                    Width="375"
                                    >
                        <Label Content="Expired Status"
                           Foreground="White"
                           FontSize="18"
                           Height="35"
                           Width="150"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                               
                           />
                    </ContentControl>

                    <!--<Textblock Text="Both Access and Excel 'Viewing by All'"
                                           Fontsize="16"/>-->

                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button x:Name="btnCloseAccess"
                                Width="100"
                                Height="40"
                                Margin="35,0,20,0"
                                Command="{Binding OpenCloseAccessFileCommand}"
                                Content="{Binding OpenCloseAccessText}" />
                        <Button x:Name="btnCloseExcel"
                                Width="100"
                                Height="40"
                                Margin="0,0,20,0"
                                Command="{Binding CloseExcelFileCommand}"
                                Content="Close Excel" />
                        <Button x:Name="btnExit"
                                Width="100"
                                Height="40"
                                HorizontalAlignment="Right"
                                BorderThickness="2"
                                BorderBrush="{StaticResource SystemYellowDark}"
                                Click="btnExit_Click"
                                Content="Exit" />
                    </StackPanel>
                </Grid>

                <!--This is the Access table manipulation / etc -->
                <Grid Grid.Row="5" Grid.ColumnSpan="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="375"/>
                        <ColumnDefinition Width="510"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid ItemsSource="{Binding NewSide}"
                              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                              Background="White"
                              MaxHeight="200"
                              d:Height="200"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              VerticalAlignment="Top">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{Binding Data.Column1Header, Source={StaticResource proxy}}"
                                                Binding="{Binding ServicePlanNumber}"
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>

                            <DataGridTextColumn Header="{Binding Data.Column1Header, Source={StaticResource proxy}}"
                                                Binding="{Binding MainAccountNumber}" 
                                                Visibility="{Binding Data.CustomerAccountsIsEnabled, Source={StaticResource proxy}}"/>

                            <DataGridTextColumn Header="{Binding Data.Column2Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountName}"
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>

                            <DataGridTextColumn Header="{Binding Data.Column2Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountName}" 
                                                Visibility="{Binding Data.CustomerAccountsIsEnabled, Source={StaticResource proxy}}"/>

                            <DataGridTextColumn Header="{Binding Data.Column3Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountArchived}"
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Wheat"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding CreateNewCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </DataGrid>

                    <ContentControl Style="{StaticResource PanelRaised}"
                                    Grid.Column="2"
                                    MaxHeight="250"
                                    MaxWidth="200">
                        <StackPanel>
                            <ContentControl Style="{StaticResource PanelSunken}"
                                    Margin="5"
                                    Height="40"
                                    Width="180"
                                    >
                                <Label Content="Compare Selection"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontSize="16"/>
                            </ContentControl>
                            <ComboBox 
                                Style="{StaticResource ComboBoxStyle}"
                                ItemsSource="{Binding CompareList}" 
                                SelectedItem="{Binding CompareSelection}"
                                IsEnabled="{Binding AreAccessAndExcelLoaded}"
                                HorizontalAlignment="Center"
                                Width="150"
                                IsEditable="True" 
                                IsReadOnly="True" 
                                Text="Please clear" 
                                Margin="0,0,0,5"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                            />


                            <customcontrols:btnMaintenanceControl
                                btnClickCommand="{Binding RunCompareScriptCommand}"
                                btnBrdrHeight="30"
                                btnBrdrWidth="80"
                                btnBrdrCornerRadius="10"
                                btnBrdrBrush="Silver"
                                btnBrdrThickness="2"
                                MaintCornerRadius="9"
                                MaintBackground="#2A2F36"
                                btnBrdrMargin="0,5"
                                btnForeground="White"
                                btnContentText="Compare"
                                btnVertAlign="Top"/>

                            <customcontrols:btnMaintenanceControl
                                btnClickCommand="{Binding RefreshDatabaseCommand}"
                                btnBrdrHeight="30"
                                btnBrdrWidth="80"
                                btnBrdrCornerRadius="10"
                                btnBrdrBrush="Silver"
                                btnBrdrThickness="2"
                                MaintCornerRadius="9"
                                MaintBackground="#2A2F36"
                                btnBrdrMargin="0,50,0,0"
                                btnForeground="White"
                                btnContentText="Refresh Database"
                                btnVertAlign="Top"
                                btnContentFontSize="9"/>

                        </StackPanel>
                    </ContentControl>

                    <DataGrid ItemsSource="{Binding ExpiredSide}"
                              Background="White"
                              MaxHeight="200"
                              d:Height="200"
                              Grid.Column="3"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                              VerticalAlignment="Top">

                        <DataGrid.Columns>
                            <!--<DataGridTextColumn HeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"/>-->

                            <DataGridTextColumn Header="{Binding Data.Column1Header, Source={StaticResource proxy}}"
                                                Binding="{Binding ServicePlanNumber}" 
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>
                            <DataGridTextColumn Header="{Binding Data.Column1Header, Source={StaticResource proxy}}"
                                                Binding="{Binding MainAccountNumber}" 
                                                Visibility="{Binding Data.CustomerAccountsIsEnabled, Source={StaticResource proxy}}"/>


                            <DataGridTextColumn Header="{Binding Data.Column2Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountName}" 
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>
                            <DataGridTextColumn Header="{Binding Data.Column2Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountName}" 
                                                Visibility="{Binding Data.CustomerAccountsIsEnabled, Source={StaticResource proxy}}"/>

                            <DataGridTextColumn Header="{Binding Data.Column3Header, Source={StaticResource proxy}}"
                                                Binding="{Binding AccountName}" 
                                                Visibility="{Binding Data.ServicePlanIsEnabled, Source={StaticResource proxy}}"/>

                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Wheat"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction Command="{Binding RemoveExpiredCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </DataGrid>

                    <GroupBox x:Name="XLorAccess" Grid.Column="4"
                              Margin="10,0,10,0"
                              VerticalAlignment="Top"
                              Header="Excel or Access"
                              Height="200"
                              Foreground="White"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                              >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".3*" />
                                <!--<ColumnDefinition Width="*" />-->
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" Grid.RowSpan="5"
                                      BorderThickness=".1" Margin="0,1,5,1"
                                      Style="{StaticResource GroupBoxNoGap}">
                                <StackPanel>
                                    <RadioButton Command="{Binding ExcelSortOrFilterCommand}" 
                                                 IsChecked="{Binding ExcelSortFilterIsChecked}" 
                                                 Margin="0,5,0,0" 
                                                 Content="Excel"
                                                 Foreground="White"
                                                 GroupName="Program"/>
                                    <RadioButton Command="{Binding AccessSortOrFilterCommand}" 
                                                 IsChecked="{Binding AccessSortFilterIsChecked}" 
                                                 Content="Access"
                                                 Foreground="White"
                                                 GroupName="Program"/>

                                    <RadioButton Command="{Binding SortCommand}"
                                                 IsChecked="{Binding SortIsChecked}" 
                                                 Margin="0,10,0,0" 
                                                 Content="Sort"
                                                 Foreground="White"
                                                 GroupName="SortOrFilter"/>
                                    <!--<RadioButton Command="{Binding FilterCommand}"
                                                 IsChecked="{Binding FilterIsChecked}" 
                                                 Content="Filter"
                                                 Foreground="White"
                                                 GroupName="SortOrFilter"/>-->

                                    <Button Command="{Binding FilterCommand}" 
                                        Width="40"
                                        Height="20"
                                            HorizontalAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        FontSize="10"
                                        Content="Filter"
                                            Margin="0,20,0,0"
                                            />

                                    <Button Command="{Binding ClearAllSortOrFilterCommand}" 
                                            Width="40"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            HorizontalContentAlignment="Center"
                                            FontSize="10"
                                            Content="Clear"
                                            Margin="0,20,0,0"/>


                                </StackPanel>

                            </GroupBox>
                            <ListBox x:Name="SortFilterListBox" 
                                     AllowDrop="True"
                                     MouseMove="SortFilterListBox_MouseMove"
                                     Drop="SortFilterListBox_Drop"
                                     DragLeave="SortFilterListBox_DragLeave"
                                     DragOver="SortFilterListBox_DragOver"
                                     MouseDoubleClick="SortFilterListBox_MouseDoubleClick"
                                     
                                     ItemsSource="{Binding ExcelOrAccessColumns}"
                                     MaxHeight="200"
                                     Grid.Column="1"
                                     Grid.RowSpan="6">
                            </ListBox>
                            <!--SelectedItem="{Binding SelectedSection}"
                                     SelectionMode="Multiple"-->

                            <Label Foreground="White"
                                   VerticalAlignment="Top"
                                   Height="25"
                                   VerticalContentAlignment="Center"
                                   Grid.Column="2"
                                   Grid.Row="0"
                                   Content="Order By:" />
                            <TextBox x:Name="txtbx1"
                                     AllowDrop="True"
                                     Background="White"
                                     Drop="txtbx1_Drop"
                                     PreviewDrop="txtbx1_PreviewDrop"
                                     DragEnter="txtbx1_DragEnter"
                                     Text="{Binding Txtbx1, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="3"
                                     Grid.Row="0"
                                     VerticalAlignment="Top"
                                     Height="25"
                                     VerticalContentAlignment="Center" 
                                     />
                            <!--Text="{Binding txtbx1, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"-->
                            <Label x:Name="Lbl1"
                                   Visibility="Visible"
                                   Foreground="White"
                                   Grid.Column="2"
                                   Grid.Row="1"
                                   Content="Then:" />
                            <TextBox x:Name="txtbx2"
                                     Visibility="Visible"
                                     Height="25"
                                     Grid.Column="3"
                                     Grid.Row="1"
                                     Text="{Binding Txtbx2, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"/>
                            <Label x:Name="Lbl2"
                                   Visibility="Visible"
                                   Foreground="White"
                                   Grid.Column="2"
                                   Grid.Row="2"
                                   Content="Then:" />
                            <TextBox x:Name="txtbx3"
                                     Visibility="Visible"
                                     Height="25"
                                     Grid.Column="3"
                                     Grid.Row="2"
                                     Text="{Binding Txtbx3, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"/>
                            <Label x:Name="Lbl3"
                                   Visibility="Visible"
                                   Foreground="White"
                                   Grid.Column="2"
                                   Grid.Row="3"
                                   Content="Then:" />
                            <TextBox x:Name="txtbx4"
                                     Visibility="Visible"
                                     Height="25"
                                     Grid.Column="3"
                                     Grid.Row="3"
                                     Text="{Binding Txtbx4, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"/>
                            <Label x:Name="Lbl4"
                                   Visibility="Visible"
                                   Foreground="White"
                                   Grid.Column="2"
                                   Grid.Row="4"
                                   Content="Then:" />
                            <TextBox x:Name="txtbx5"
                                     Visibility="Visible"
                                     Height="25"
                                     Grid.Column="3"
                                     Grid.Row="4"
                                     Text="{Binding Txtbx5, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"/>
                            <Label x:Name="Lbl5"
                                   Visibility="Visible"
                                   Foreground="White"
                                   Grid.Column="2"
                                   Grid.Row="5"
                                   Content="Then:" />
                            <TextBox x:Name="txtbx6"
                                     Visibility="Visible"
                                     Height="25"
                                     Grid.Column="3"
                                     Grid.Row="5"
                                     Text="{Binding Txtbx6, Mode=TwoWay, 
                                            UpdateSourceTrigger=PropertyChanged}"/>

                        </Grid>
                    </GroupBox>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>