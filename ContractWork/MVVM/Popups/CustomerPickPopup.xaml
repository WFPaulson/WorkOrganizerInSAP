<Window x:Class="ContractWork.MVVM.Popups.CustomerPickPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractWork.MVVM.Popups"
        xmlns:customcontrols="clr-namespace:ContractWork.CustomControls"
        
        mc:Ignorable="d"
        
        Height="500" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragMe"
        x:Name="CustomerPickPop">

    <Border CornerRadius="10,10,10,10"
            BorderBrush="White"
            BorderThickness="2"
            Background="#F9BEAE">

        <Grid>
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1"/>
               <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Grid.RowSpan="2" 
                    Grid.Column="0" Grid.ColumnSpan="5"
                    CornerRadius="9,9,0,0"
                    BorderBrush="White"
                    BorderThickness="0,0,0,2"
                  Background="#DC8E3B">
            
                <Label Content="Customer Pick"
                       FontSize="24"
                       VerticalAlignment="Center"/>
           
            </Border>
            <StackPanel Orientation="Horizontal"
                    Grid.Row="1" Grid.Column="3" >
                <customcontrols:WindowControls
                    TextContent="-"
                    btnWidth="20"
                    btnMargin="3"
                    btnBckgrnd="#F5B53F"
                    btnClick="btnMinimize_Click"
                    Margin="0,0,0,0"
                    />  
                <customcontrols:WindowControls
                    TextContent="X"
                    TextPadding="1,0,1,2"
                    btnWidth="20"
                    btnMargin="3"
                    btnBckgrnd="#F55551"
                    btnClick="btnExit_Click"
                    Margin="0,0,0,0"
                    />
            </StackPanel>

            <Grid Grid.Row="2" Grid.RowSpan="2" Grid.Column="2">
                <StackPanel >
                    <ListView ItemsSource="{Binding dte}"
                        x:Name="lstViewValue"
                        Margin="20,10,5,5"
                        Width="300"
                        Height="388"
                        Background="White"
                        Foreground="Black"
                        HorizontalAlignment="Left"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                              MouseDoubleClick="GetCustomerName_Click"
                              SelectedItem="{Binding selectedAccount}"
                              >
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Key}"/>
                                    <GridViewColumn Width="40" DisplayMemberBinding="{Binding Source={x:Null}}"/>
                                    <GridViewColumn Header="Customer Name" DisplayMemberBinding="{Binding Value}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>

            <customcontrols:SelectionControls
                Grid.Column="3" Grid.Row="3"
                btnWidth="30"
                btnHeight="30"
                MaintBackground="#DC8E3B"
                btnForeground="White"
                btnContentFontSize="9"
                btnContentText="Next >>"
                btnClick="NextButton_click"
            />

        </Grid>
    </Border>
</Window>
