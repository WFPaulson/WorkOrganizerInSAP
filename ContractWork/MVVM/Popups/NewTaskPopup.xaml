<Window x:Class="ContractWork.MVVM.Popups.NewTaskPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractWork.MVVM.Popups"
        mc:Ignorable="d"
        
        xmlns:converters="clr-namespace:ContractWork.Converters"
        xmlns:customcontrols="clr-namespace:ContractWork.CustomControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        
        Height="175" Width="400"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="DragMe"
        >
    
    <Border CornerRadius="10"
        BorderBrush="White"
        BorderThickness="1">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            
            <Border CornerRadius="9, 9, 0, 0" Grid.Column="1"
                    Grid.ColumnSpan="4" Grid.Row="1" 
                    Background="#4C74A5">
                <Label Content="New Task" 
                       FontSize="18" VerticalAlignment="Top"
                       Margin="0,-3,0,0"/>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="1" Grid.Column="4" >
                <customcontrols:WindowControls
                    TextContent="-"
                    btnWidth="20"
                    btnMargin="3"
                    btnBckgrnd="#F5B53F"
                    btnClick="btnMinimize_Click"
                    Margin="0,0,0,0"
                    />
                <customcontrols:WindowControls
                    TextContent="X"
                    TextPadding="1,0,1,2"
                    btnWidth="20"
                    btnMargin="3"
                    btnBckgrnd="#F55551"
                    btnClick="btnExit_Click"
                    Margin="0,0,0,0"
                    />
            </StackPanel>

            <Grid Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="2"
                        Background="WhiteSmoke"/>

            <StackPanel Grid.Column="1" Grid.Row="2">
                <Label Content="Customer:" FontSize="11" HorizontalAlignment="Right"/>
                <Label Content="Description:" FontSize="11" HorizontalAlignment="Right"/>
                <Label Content="Date Created:" FontSize="11" HorizontalAlignment="Right"/>
                <Label Content="Date Due:" FontSize="11" HorizontalAlignment="Right"/>
                <Label Content="Importance:" FontSize="11" HorizontalAlignment="Right"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2">
                <customcontrols:txtbxRoundedControl 
                    x:Name="txtbxCustomerName"
                    txtbxWidth="200"
                    txtbxHeight="20"
                    txtbxVerticAlign="Center"
                    txtbxHorizAlign="Left"
                    txtbxMargin="5,3,0,2"
                    MouseDoubleClick="GetCustomerName_Click" 
                />
                <customcontrols:txtbxRoundedControl 
                    x:Name="txtbxDescription"
                    txtbxWidth="200"
                    txtbxHeight="20"
                    txtbxVerticAlign="Center"
                    txtbxHorizAlign="Left"
                    txtbxMargin="5,3,0,2"
                />
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="Black"
                        Width="110"
                        HorizontalAlignment="Left"
                        Margin="5 0 0 0"
                        >
                    <DatePicker x:Name="dpDateCreated" 
                                IsTodayHighlighted="True"
                                BorderBrush="{x:Null}"
                                />
                </Border>
  
                <Border CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="Black"
                        Width="110"
                        HorizontalAlignment="Left"
                        Margin="5 0 0 0"
                        >
                    <DatePicker x:Name="dpDateDue" 
                                IsTodayHighlighted="True"
                                BorderBrush="{x:Null}"
                                />
                </Border>

                <!--</customcontrols:txtbxRoundedControl>-->

                <ComboBox x:Name="cboImportance"
                        Style="{StaticResource ComboBoxStyle}" 
                        Text="Select your priority ..."
                        IsEditable="True" 
                        IsReadOnly="True" 
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Margin="10,1,0 0"
                        Padding="0,0,0,6"
                        Width="140"
                        Height="20"
                        FontSize="11"/>

            </StackPanel>

            <!--<customcontrols:SelectionControls 
                Grid.Row="2" Grid.Column="4"
                Width="20"
                Height="20"
                
                />-->
            <customcontrols:SelectionControls
                Grid.Column="4" Grid.Row="2"
                btnWidth="30"
                btnHeight="30"
                MaintBackground="#4C74A5"
                btnForeground="White"
                btnContentFontSize="9"
                btnContentText="Next >>"
                btnClick="NextButton_click"
                btnVertAlign="Bottom"
                btnBrdrMargin="0 0 0 5"
            />  

            <Border Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="3" 
                    CornerRadius="0,0,9,9"
                    
                Background="#4C74A5"/>

        </Grid>
    </Border>
</Window>
