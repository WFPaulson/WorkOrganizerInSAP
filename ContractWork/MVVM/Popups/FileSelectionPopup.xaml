<Window x:Class="ContractWork.MVVM.Popups.FileSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractWork.MVVM.Popups"
        xmlns:converters="clr-namespace:ContractWork.Converters"
        xmlns:customcontrols="clr-namespace:ContractWork.CustomControls" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="ContractAndAssetsWindow" 
        Height="400" Width="1100"
        MouseLeftButtonDown="DragMe"
        x:Name="FileSelect"
        >
    <!--d:DataContext="{d:DesignInstance Type=local:FileSelectionViewModel}"-->
    <Border CornerRadius="10"
        Background="#212529"
        BorderBrush="White"
        BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="180"/>


            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width=".8*"/>
                <ColumnDefinition Width=".2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="2"
                BorderBrush="White"
                BorderThickness="2"
                Width="350"
                Height="35"
                Margin="0,0,0,5"
                CornerRadius="5"
                Background="Black">
                <Label Content="Default File Locations"
                    VerticalAlignment="Center"
                    Padding="0,0,0,2"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="18"/>
            </Border>

            <StackPanel Orientation="Horizontal"
                Grid.Column="4">
                <customcontrols:WindowControls
                    TextContent="-"                        
                    btnWidth="20"
                    btnMargin="20,0,0,0"
                    btnBckgrnd="#F5B53F"
                    btnClick="btnMinimize_Click"
                />

                <customcontrols:WindowControls
                    TextContent="X"
                    btnWidth="20"
                    btnMargin="5,0,0,0"
                    btnBckgrnd="#F55551" 
                    btnClick="btnExit_Click"
                />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickContractsFileCommand}"
                    btnCmdParameter="PMText"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="#BEBEBE"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Contracts File"
                />
                <customcontrols:TextBoxControls
                    x:Name="ContractsFile"
                
                    txtbxWidth="980"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    
                />

            </StackPanel>
            <!--txtbxBackground="{Binding PmTextBoxBackground}"
        txtbxForeground="{Binding PmTextBoxForeground}"
        txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                txtbxText="{Binding ContractFileName}"-->

            <StackPanel Orientation="Horizontal"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickAssetsFileCommand}"
                    btnCmdParameter="PMText"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="#BEBEBE"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Assets File"
                />
                <customcontrols:TextBoxControls
                    x:Name="AssetsFile"
                    
                    txtbxWidth="980"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    
                />

            </StackPanel>

            <!--txtbxBackground="{Binding PmTextBoxBackground}"
txtbxForeground="{Binding PmTextBoxForeground}"
txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"
                txtbxText="{Binding AssetFileName}"-->

            <StackPanel 
                Orientation="Horizontal"
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickAccessFileCommand}"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="#BEBEBE"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Access File"
                />
                <customcontrols:TextBoxControls
                    x:Name="PMTextbox"
                    
                    txtbxWidth="980"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    txtbxText="{Binding AccessFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />

            </StackPanel>

            <!--txtbxBackground="{Binding PmTextBoxBackground}"
txtbxForeground="{Binding PmTextBoxForeground}"
txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"-->

            <StackPanel 
                Orientation="Horizontal"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="4">
                <customcontrols:SelectionControls
                    btnClickCommand="{Binding PickInventoryFileCommand}"
                    btnBrdrCornerRadius="11"
                    MaintCornerRadius="10"
                    MaintBackground="#BEBEBE"
                    btnBrdrHeight="45"
                    btnBrdrWidth="75"
                    btnBrdrThickness="2"
                    btnContentText="Inventory File"
                />
                <customcontrols:TextBoxControls
                    x:Name="InventoryFilenameTextBox"
                   
                    txtbxWidth="980"
                    txtbxHeight="28"
                    txtbxMargin="5,0,0,0"
                    HorizontalAlignment="Left"
                    txtbxFontSize="15"
                    txtbxBorderThickness="2"
                    txtbxPadding="3,0,0,1"
                    txtbxText="{Binding InventoryFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
            </StackPanel>

            <!--txtbxBackground="{Binding PmTextBoxBackground}"
 txtbxForeground="{Binding PmTextBoxForeground}"
 txtbxBorderBrush="{Binding PmTextBoxBorderBrush}"-->

        </Grid>
    </Border>
</Window>

